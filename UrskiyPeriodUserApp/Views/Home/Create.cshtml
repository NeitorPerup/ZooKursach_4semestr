@using UrskiyPeriodBusinessLogic.ViewModels;
@model RouteViewModel;
@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h2 class="display-4">Создание маршрута</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Название:</div>
        <div class="col-8"><input type="text" name="name" id="name" /></div>
    </div>
    <div class="row">
        <div class="col-4">Дата посещения:</div>
        <div class="col-8 form-group">
            <input asp-for="DateVisit" id="datepicker" name="datepicker" class="form-control"/>
            <span asp-validation-for="DateVisit" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ReserveId" class="control-label"></label>
        <select asp-for="ReserveId" id="reserve" class="form-control" multiple asp-items="ViewBag.Reserves"></select>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Создать" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts
    {

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $('#datepicker').datetimepicker({
                dateFormat: "dd-MM-yyyy",
                changeMonth: true
            });
        });
    </script>
}